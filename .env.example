# EuropeTalks Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# ==============================================
# DATABASE
# ==============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/europetalks?schema=public"

# ==============================================
# CLERK AUTHENTICATION
# ==============================================
# Get these from: https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional Clerk URLs (uses defaults if not set)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# ==============================================
# EMAIL CONFIGURATION - CONTACT FORM
# ==============================================
# SMTP server settings for contact form emails
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587

# Contact form email credentials
CONTACT_FORM_EMAIL_SERVER_USER=your_email@example.com
CONTACT_FORM_EMAIL_SERVER_PASSWORD=your_email_password

# Contact form sender and recipient
CONTACT_FORM_EMAIL_FROM=noreply@europetalks.eu
SEND_TO_EMAIL=contact@europetalks.eu

# ==============================================
# EMAIL CONFIGURATION - EVENT SIGNUPS
# ==============================================
# Email credentials for event signup notifications
EVENT_SIGNUP_EMAIL_SERVER_USER=your_email@example.com
EVENT_SIGNUP_EMAIL_SERVER_PASSWORD=your_email_password
EVENT_SIGNUP_EMAIL_FROM=events@europetalks.eu

# ==============================================
# UPLOADTHING (File Uploads)
# ==============================================
# Get these from: https://uploadthing.com/dashboard
UPLOADTHING_SECRET=sk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
UPLOADTHING_APP_ID=xxxxxxxxxx

# ==============================================
# TRANSLATION EXPORT
# ==============================================
# API key for translation export endpoint
# Generate with: node scripts/generate-export-key.js
TRANSLATIONS_EXPORT_API_KEY=your_random_secure_api_key_here

# ==============================================
# NODE ENVIRONMENT
# ==============================================
# Set to 'development' for local development
# Set to 'production' for production deployment
NODE_ENV=development

# ==============================================
# DEEPL API (Optional - for better translations)
# ==============================================
# DeepL API key for high-quality translations (optional)
# Get from: https://www.deepl.com/pro-api
DEEPL_API_KEY=your_deepl_api_key_here
