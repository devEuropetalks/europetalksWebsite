generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id          String        @id @default(cuid())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  location    String
  imageUrl    String?
  formSchemaId String?
  formSchema  FormSchema?   @relation(fields: [formSchemaId], references: [id])
  signup_period_json Json?  @default("{}")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  signups     EventSignup[]

  @@index([formSchemaId])
}

model FormSchema {
  id          String      @id @default(cuid())
  name        String
  description String?
  fields      FormField[]
  terms       EventTerm[]
  events      Event[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model FormField {
  id          String     @id @default(cuid())
  schemaId    String
  type        String
  label       String
  name        String
  required    Boolean    @default(false)
  placeholder String?
  description String?
  options     Json?      @default("[]")
  validation  Json?
  order       Int        @default(0)
  schema      FormSchema @relation(fields: [schemaId], references: [id], onDelete: Cascade)

  @@index([schemaId])
}

model EventTerm {
  id          String     @id @default(cuid())
  schemaId    String
  text        String
  order       Int        @default(0)
  schema      FormSchema @relation(fields: [schemaId], references: [id], onDelete: Cascade)

  @@index([schemaId])
}

model EventSignup {
  id         String   @id @default(cuid())
  eventId    String
  fullName   String
  email      String
  phone      String?
  motivation String?
  formData   Json?    @default("{}")
  createdAt  DateTime @default(now())
  event      Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
}

model Translation {
  id        String   @id @default(cuid())
  language  String   @unique
  content   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
