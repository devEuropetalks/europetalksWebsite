generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String        @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String
  imageUrl    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  signups     EventSignup[]
}

model EventSignup {
  id        String   @id @default(cuid())
  eventId   String
  fullName  String
  email     String
  phone     String?
  motivation String?
  createdAt DateTime @default(now())
  event     Event    @relation(fields: [eventId], references: [id])

  @@index([eventId])
}

model Translation {
  id        String   @id @default(cuid())
  language  String   @unique
  content   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
